<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="200"
    d:DesignHeight="200"
    x:Class="Socr.Main.ScreenRegionWindow"
    Height="200"
    Width="200"
    WindowStartupLocation="Manual"
    Position="10, 10"

    Background="Transparent"
    TransparencyBackgroundFallback="Transparent"
    ExtendClientAreaToDecorationsHint="True"
    ExtendClientAreaChromeHints="NoChrome"
    ExtendClientAreaTitleBarHeightHint="-1"
    BorderThickness="10"

    PointerPressed="ScreenRegion_OnPointerPressed"
    PointerReleased="ScreenRegion_OnPointerReleased"
    PointerMoved="ScreenRegion_OnPointerMoved">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Rectangle
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Grid.RowSpan="2"
            Fill="Green"
            Opacity="0.3"
            StrokeThickness="1"
            Stroke="DarkGreen"/>
        <Button
            Opacity="0.5"
            Padding="0, 0, 10, 10"
            Grid.Column="1"
            Grid.Row="1"
            Height="36"
            Width="36"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="V"
            Click="Button_OnClick"/>
    </Grid>
</Window>
